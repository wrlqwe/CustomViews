<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#a8a8a8"
    tools:context="com.wrl.viewtest.AnimateProgressActivity">

    <com.wrl.viewtest.views.AnimateProgressView
        android:id="@+id/animProgressView"
        android:layout_width="match_parent"
        app:apv_background="#433688"
        app:apv_sweep_background="@drawable/bg_score_bus"
        app:apv_anim_duration="1000"
        android:layout_height="1000dp" />

</RelativeLayout>
