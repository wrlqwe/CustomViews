            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:background="@drawable/composer_button"
            android:src="@drawable/composer_icn_plus" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="music"
            android:src="@drawable/composer_music"
            android:contentDescription="music" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="place"
            android:src="@drawable/composer_place" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="sleep"
            android:src="@drawable/composer_sleep" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="sun"
            android:src="@drawable/composer_thought" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="people"
            android:src="@drawable/composer_with" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="camera"
            android:src="@drawable/composer_camera" />
    </com.wrl.viewtest.views.ArcMenuView>

